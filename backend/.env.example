# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/auction-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://://localhost:8081

# Cloudinary (Image Storage)
CLOUD_NAME=your-cloudinary-cloud-name
CLOUD_API_KEY=your-cloudinary-api-key
CLOUD_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Gmail SMTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Auction Platform

# QPay Configuration
QPAY_BASE_URL=https://merchant-sandbox.qpay.mn
QPAY_USERNAME=TEST_MERCHANT
QPAY_PASSWORD=123456
QPAY_INVOICE_CODE=TEST_INVOICE
QPAY_WEBHOOK_SECRET=your-qpay-webhook-secret-key

# Firebase Admin SDK (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# SMS Configuration (choose one provider)
SMS_PROVIDER=unitel
# Options: unitel, mobicom, skytel

# Unitel SMS Gateway
SMS_USERNAME=your-unitel-username
SMS_PASSWORD=your-unitel-password
SMS_SENDER_ID=Auction

# Mobicom SMS (if using mobicom)
# SMS_USERNAME=your-mobicom-username
# SMS_PASSWORD=your-mobicom-password

# Skytel SMS (if using skytel)
# SMS_USERNAME=your-skytel-username
# SMS_PASSWORD=your-skytel-password

# Deposit Configuration
MIN_TRUST_SCORE_FOR_DEPOSIT=70
DEPOSIT_PERCENTAGE=0.1

# Redis Configuration (optional - for production rate limiting)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Rate Limiting (if not using Redis, in-memory will be used)
# LOGIN_RATE_LIMIT=5
# OTP_RATE_LIMIT=3
# API_RATE_LIMIT=100
